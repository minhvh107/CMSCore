@model IList<CMSCore.Application.ViewModels.AppUserViewModel>
<div class="" style="max-height: 300px;">
    <div class="table-header">
        <strong>Danh sách người dùng trong nhóm</strong>
    </div>
    <div class="table-header-action">
        <a href="javascript:void(0);" class="margin-right-20 btn-assign-user" url-content="/Admin/Role/AssignUser"><i class="fa fa-plus fa-lg"></i> Thêm</a>
        @if (Model == null || Model.Count == 0)
        {
            <a href="javascript:void(0);" class="margin-right-20 disabled"><i class="fa fa-remove fa-lg"></i> Xóa</a>
        }
        else
        {
            <a href="javascript:void(0);" class="margin-right-20 btn-remove-user" url-content="/Admin/Role/RemoveUserInRole"><i class="fa fa-remove fa-lg"></i> Xóa</a>
        }

        <input type="hidden" value="/Admin/Role/ViewItem" id="url-view" />
    </div>
    <div class="table-responsive table-fixed">
        <table class="table table-striped table-bordered jambo_table fixed_headers">
            <thead>
                <tr class="headings">
                    <th class="column-title">Tên đăng nhập</th>
                    <th class="column-title">Họ tên</th>
                    <th class="column-title">Số điện thoại</th>
                    <th class="column-title">Email</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || Model.Count == 0)
            {
                    <tr class="">
                        <td colspan="4">
                            Không có dữ liệu
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var wp in Model)
                    {
                        <tr class="even pointer" item-id="@wp.UserName">
                            <td class="">@wp.UserName</td>
                            <td class="">@(wp.FullName)</td>
                            <td class="column-20">@wp.PhoneNumber</td>
                            <td class="column-20">
                                @wp.Email
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
