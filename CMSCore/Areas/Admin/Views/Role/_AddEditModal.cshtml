<div id="modal-add-edit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add/edit role</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="frmMaintainance">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Thông tin chung</h3>
                                </div>
                                <div class="panel-body">
                                    <input type="hidden" id="hidId" value="0" />
                                    <input type="hidden" id="hidDateCreated" value="@DateTime.Now" />
                                    <div class="row form-group">
                                        <label for="txtName" class="col-md-2 col-sm-12 col-xs-12 required">Role name</label>
                                        <div class="col-md-10 col-sm-12 col-xs-12">
                                            <input type="text" name="txtName" class="form-control" id="txtName">
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <label for="txtDescription" class="col-md-2 col-sm-12 col-xs-12 required">Description</label>
                                        <div class="col-md-10 col-sm-12 col-xs-12">
                                            <textarea rows="4" name="txtDescription" class="form-control" id="txtDescription"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSave"><i class="fa fa-save fa-lg"></i> Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-sign-out fa-lg"></i> Cancel</button>
            </div>
        </div>
    </div>
</div>