
@using ISP.Common.Constants
@using ISP.Web.WebUtils
@model List<ISP.Model.UserRole>
<div class="" style="min-height: 300px;">
    <div class="table-header">
        <strong>Danh sách các nhóm quyền được cấp</strong>
    </div>
    <div class="table-header-action">
        <a href="javascript:void(0);" class="margin-right-20 btn-assign-role" url-content="/UserManagement/AssignRole"><i class="fa fa-plus fa-lg"></i> Thêm</a>
        @if (Model == null || Model.Count == 0)
        {
            <a href="javascript:void(0);" class="margin-right-20 disabled"><i class="fa fa-remove fa-lg"></i> Xóa</a>
        }
        else
        {
            <a href="javascript:void(0);" class="margin-right-20 btn-remove-role" url-content="/UserManagement/RemoveRole"><i class="fa fa-remove fa-lg"></i> Xóa</a>
        }
        
        <input type="hidden" value="/RoleManagement/ViewItem" id="url-view"/>
    </div>
    <div class="table-responsive table-fixed">
        <table class="table table-striped table-bordered jambo_table fixed_headers">
            <thead>
            <tr class="headings">
                <th class="column-title">Tên nhóm quyền</th>
                <th class="column-title">Mô tả</th>
            </tr>
            </thead>
            <tbody>
            @if (Model == null || Model.Count == 0)
            {
                <tr class="">
                    <td colspan="2">
                        Không có dữ liệu
                    </td>
                </tr>
            }
            else
            {
                foreach (var wp in Model)
                {
                    <tr class="even pointer" item-id="@wp.RoleID">
                        <td class="">@wp.RoleName</td>
                        <td class="">@wp.Description</td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>

