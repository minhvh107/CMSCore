@using CMSCore.Data.Enums
@model IList<CMSCore.Application.ViewModels.AppUserViewModel>
<div class="table-header-action">
    <a href="javascript:void(0);" class="margin-right-20 btn-add-item" url-content="/Admin/User/Add"><i class="fa fa-plus fa-lg"></i> Thêm</a>
    <a href="javascript:void(0);" class="margin-right-20 btn-update-item" url-content="/Admin/User/Edit"><i class="fa fa-edit fa-lg"></i> Sửa</a>
    <a href="javascript:void(0);" class="margin-right-20 btn-remove-item" url-content="/Admin/User/Delete"><i class="fa fa-remove fa-lg"></i> Xóa</a>
    @*<a href="javascript:void(0);" class="margin-right-20 btn-export-item" url-content="/Admin/User/ExportExcel"><i class="fa fa-download fa-lg"></i> Xuất Excel</a>
    <a href="javascript:void(0);" class="margin-right-20 btn-import-item" url-content="/Admin/User/ImportExcel"><i class="fa fa-upload fa-lg"></i> Nhập Excel</a>*@
    <input type="hidden" value="/Admin/User/ViewItem" id="url-view" />
</div>
<div class="table-responsive table-fixed">
    <table class="table table-striped table-bordered jambo_table bulk_action fixed_headers">
        <thead>
            <tr class="">
                <th class="column-title">Tài khoản</th>
                <th class="column-title">Tên</th>
                <th class="column-title">Avatar</th>
                <th class="column-title">Trạng thái</th>
            </tr>
        </thead>

        <tbody>
            @{
                if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr class="" item-id="@item.Id">

                            <td class="column-50" title="@item.UserName">@item.UserName</td>
                            <td class="column-50" title="@item.FullName">@item.FullName</td>
                            <td class="column-50" title="@item.Avatar">@item.Avatar</td>
                            <td class="text-center">
                                @if (item.Status == Status.Active)
                                {
                                    <input type="checkbox" class="flat" checked="checked" readonly="readonly" />
                                }
                                else
                                {
                                    <input type="checkbox" class="flat" readonly="readonly" />
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {

                    {
                        <tr>
                            <td colspan="4">Không có dữ liệu</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>

<div class="clearfix"></div>