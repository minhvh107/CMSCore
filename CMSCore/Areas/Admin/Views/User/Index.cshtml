@{
    ViewData["Title"] = "User List";
}
@section Scripts{

    <script src="~/app/controllers/user/index.js" asp-append-version="true"></script>
    <script>
        var userObj = new UserController();
        userObj.initialize();
    </script>
}
@section Styles{

}

<div class="page-title">
    <div class="title_left">
        <h3>User</h3>
    </div>
</div>

<div class="clearfix"></div>
<div class="x_panel">
    <div class="x_title">
        <div class="row form-inline">
            <label class="col-md-2 col-sm-3 col-xs-12  margin-bottom-10" for="Keyword">
                User:
            </label>
            <div class="col-md-3 col-sm-3 col-xs-12">
                <input type="text" id="txtKeyword" class="form-control width-per-100">
            </div>
            <div class="col-md-2 col-sm-4 col-xs-4">
                <button type="button" class="btn btn-primary pull-left btn-search btn-small" id="btnSearch"><i class="fa fa-search"></i> Search</button>
            </div>
        </div>
    </div>
    <div class="x_content">
        <div id="listContent">
            <div class="table-header-action">
                <a href="javascript:void(0);" class="margin-right-20 btnAdd"><i class="fa fa-plus fa-lg"></i> Add</a>
                <a href="javascript:void(0);" class="margin-right-20 btnEdit"><i class="fa fa-edit fa-lg"></i> Edit</a>
                <a href="javascript:void(0);" class="margin-right-20 btnDelete"><i class="fa fa-remove fa-lg"></i> Delete</a>
            </div>
            <div class="table-responsive table-fixed">
                <table class="table table-striped table-bordered jambo_table bulk_action fixed_headers">
                    <thead>
                        <tr>
                            <th>Account</th>
                            <th>Name</th>
                            <th>Avatar</th>
                            <th>Created Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="tblContent"></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="x_paging">
        @{Html.RenderPartial("~/Areas/Admin/Views/Shared/_CommonPagination.cshtml");}
    </div>
</div>

<script id="table-template" type="x-tmpl-mustache">
    <tr item-id="{{Id}}">
        <td>{{UserName}}</td>
        <td>{{FullName}}</td>
        <td>{{{Avatar}}}</td>
        <td>{{{DateCreated}}}</td>
        <td>{{{Status}}}</td>
    </tr>
</script>

<script id="role-template" type="x-tmpl-mustache">
    <div class="checkbox">
        <label>
            <input type="checkbox" {{Checked}} value="{{Name}}" name="ckRoles">
            <span class="text">{{Description}}</span>
        </label>
    </div>
</script>
@Html.Partial("_AddEditModal.cshtml")