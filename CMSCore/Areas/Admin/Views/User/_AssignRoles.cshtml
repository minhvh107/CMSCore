@model List<CMSCore.Application.ViewModels.AppRoleViewModel>
@{
    const string title = "Chọn nhóm quyền cần thêm";
}
<div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">@title</h4>
        </div>
        <div class="modal-body form-warranty-package">
            <form action="/Admin/User/AssignRole" method="post" id="frmSave" class="form-horizontal">
                <div class="">
                    <div class="table-responsive table-fixed noselect">
                        @Html.ValidationSummary(true)
                        <table class="table table-striped table-bordered jambo_table fixed_headers">
                            <thead>
                                <tr>
                                    <th class="column-title">Chọn</th>
                                    <th class="column-title">Tên quyền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="role-item" role-id="@item.Name" role-name="@item.Name">
                                        <td class="text-center">
                                            <input type="checkbox" class="role-item-check flat" />
                                        </td>
                                        <td>
                                            @item.Name
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-assign"><i class="fa fa-save fa-lg"></i> Cập nhật</button>
            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-sign-out fa-lg"></i> Hủy bỏ</button>
        </div>

    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->