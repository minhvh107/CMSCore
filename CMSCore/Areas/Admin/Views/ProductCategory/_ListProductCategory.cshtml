
@using CMSCore.Data.Enums
@model IList<CMSCore.Application.ViewModels.ProductCategoryViewModel>
<div class="table-header-action">
    <a href="javascript:void(0);" class="margin-right-20 btn-add-item" url-content="/Admin/ProductCategory/Add"><i class="fa fa-plus fa-lg"></i> Thêm</a>
    <a href="javascript:void(0);" class="margin-right-20 btn-update-item" url-content="/Admin/ProductCategory/Edit"><i class="fa fa-edit fa-lg"></i> Sửa</a>
    <a href="javascript:void(0);" class="margin-right-20 btn-remove-item" url-content="/Admin/ProductCategory/Delete"><i class="fa fa-remove fa-lg"></i> Xóa</a>
    @*<a href="javascript:void(0);" class="margin-right-20 btn-export-item" url-content="/Admin/ProductCategory/ExportExcel"><i class="fa fa-download fa-lg"></i> Xuất Excel</a>
    <a href="javascript:void(0);" class="margin-right-20 btn-import-item" url-content="/Admin/ProductCategory/ImportExcel"><i class="fa fa-upload fa-lg"></i> Nhập Excel</a>*@
    <input type="hidden" value="/Admin/ProductCategory/ViewItem" id="url-view" />
</div>
<div class="table-responsive table-fixed">
    <table class="table table-striped table-bordered jambo_table bulk_action fixed_headers">
        <thead>
        <tr class="">
            <th class="column-title">Tên nhóm sản phẩm</th>
            <th class="column-title">Trạng thái</th>
            <th class="column-title">Thứ tự</th>
        </tr>
        </thead>

        <tbody>
        @{
            if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr class="" item-id="@item.Id">
                        <td class="column-50" title="@item.Name">@item.Name</td>
                        <td class="text-center">
                            @if (item.Status == Status.Active)
                            {
                                <input type="checkbox" class="flat" checked="checked" readonly="readonly" />
                            }
                            else
                            {
                                <input type="checkbox" class="flat" readonly="readonly" />
                            }
                        </td>
                        <td class="text-right" title="@item.SortOrder">@item.SortOrder</td>
                    </tr>
                }
            }
            else
            {
                {
                    <tr>
                        <td colspan="6">Không có dữ liệu</td>
                    </tr>
                }
            }
        }
        </tbody>
    </table>
</div>

<div class="clearfix"></div>