@{
    ViewData["Title"] = "Index";
}
@section Scripts{
    <script src="~/app/controllers/product/index.js"></script>
    <script>
        var product = new productController();
        product.initialize();
    </script>
}
<div class="page-title">
    <div class="title_left">
        <h3>Products</h3>
    </div>
</div>
<div class="clearfix"></div>

<div class="x_panel">
    <div class="x_title">
        <div class="row form-inline">
            <label class="col-md-2 col-sm-3 col-xs-12  margin-bottom-10" for="Keyword">
                Product:
            </label>
            <div class="col-md-3 col-sm-3 col-xs-12">
                <input type="text" id="txtKeyword" class="form-control width-per-100">
            </div>
            <label class="col-md-1 col-sm-2 col-xs-12">
                Category:
            </label>
            <div class="col-md-2 col-sm-2 col-xs-12 margin-bottom-10">
                <select id="ddlCategorySearch" class="form-control">
                    <option>—Select Category—</option>
                </select>
            </div>
            <div class="col-md-2 col-sm-4 col-xs-4">
                <button type="button" class="btn btn-primary pull-left btn-search btn-small" id="btnSearch"><i class="fa fa-search"></i> Search</button>
            </div>
        </div>
    </div>
    <div class="x_content">
        <div id="listContent">
            <div class="table-header-action">
                <a href="javascript:void(0);" class="margin-right-20 btnAdd"><i class="fa fa-plus fa-lg"></i> Add</a>
                <a href="javascript:void(0);" class="margin-right-20 btnEdit"><i class="fa fa-edit fa-lg"></i> Edit</a>
                <a href="javascript:void(0);" class="margin-right-20 btnDelete"><i class="fa fa-remove fa-lg"></i> Delete</a>
                <a href="javascript:void(0);" class="margin-right-20 btnImport"><i class="fa fa-upload fa-lg"></i> Tải lên</a>
                <a href="javascript:void(0);" class="margin-right-20 btnExport"><i class="fa fa-download fa-lg"></i> Tải xuống</a>
                <a class="margin-right-20 pull-right" href="~/templates/ProductImportTemplate.xlsx"><i class="fa fa-hand-o-down fa-lg"></i>  Mẫu Template</a>
            </div>
            <div class="table-responsive table-fixed">
                <table class="table table-striped table-bordered jambo_table bulk_action fixed_headers">
                    <thead>
                        <tr>
                            <th class="column-title column-30">Name</th>
                            <th class="column-title column-20">Category</th>
                            <th class="column-title column-20">Price</th>
                            <th class="column-title column-10">Image</th>
                            <th class="column-title column-10">Created Date</th>
                            <th class="column-title column-10">Status</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="x_paging">
        @{Html.RenderPartial("~/Areas/Admin/Views/Shared/_CommonPagination.cshtml");}
    </div>
</div>

<script id="table-template" type="x-tmpl-mustache">
    <tr item-id="{{Id}}">
        <td class="column-30">{{Name}}</td>
        <td class="column-20">{{CategoryName}}</td>
        <td class="column-20">{{Price}}</td>
        <td class="column-10">{{{Image}}}</td>
        <td class="column-10">{{DateCreated}}</td>
        <td class="column-10">{{{Status}}}</td>
    </tr>
</script>

@Html.Partial("_AddEditModal")
@Html.Partial("_ImportExcelModal")