@{
    ViewData["Title"] = "Index";
}
@using CMSCore.Application.ViewModels
@model PageProductViewModel
@{
    var lstCate = (List<ProductCategoryViewModel>)ViewData["lstCate"];
}
<div class="page-title">
    <div class="title_left">
        <h3>Danh sách sản phẩm</h3>
    </div>
</div>
<div class="clearfix"></div>

<div class="x_panel">
    <div class="x_title">
        <form action="/Admin/Product/Filter" id = "frmFilter" class="form-inline">

            @Html.Hidden("CurrentPage", Model.PagedResult.CurrentPage)
            @Html.Hidden("PageSize", Model.PagedResult.PageSize)
            <div class="row form-inline">
                <label class="col-md-2 col-sm-3 col-xs-12  margin-bottom-10" for="Keyword">
                    Tên sản phẩm:
                </label>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <input type="text" id="Keyword" name="Keyword" class="form-control  width-per-100" autocomplete="off" />
                </div>
                <label class="col-md-2 col-sm-3 col-xs-12  margin-bottom-10" for="categoryId">
                    Nhóm sản phẩm:
                </label>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <select class="form-control" id="categoryId" name="categoryId">
                        <option value="">—Chọn nhóm sản phẩm—</option>
                        @foreach (var item in lstCate)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2 col-sm-4 col-xs-4">
                    <button type="submit" class="btn btn-primary pull-left btn-search btn-small"><i class="fa fa-search"></i> Tìm kiếm</button>
                </div>
            </div>
        </form>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div id="listContent">
            @{Html.RenderPartial("_ListProduct", Model.ListProductViewModels);}
        </div>
    </div>
    <div class="x_paging">
        @{Html.RenderPartial("~/Areas/Admin/Views/Shared/_CommonPagination.cshtml", Model.PagedResult);}
    </div>
</div>
<div class="modal" id="subModal" role="dialog">
    <div class="modal-dialog" role="dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                1111
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-save">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@section scripts
{
    <script src="~/admin-side/js/product/index.js"></script>
}