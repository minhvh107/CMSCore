@{
    Layout = null;
}
@model CMSCore.Models.AccountViewModels.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Login Admin </title>

    <!-- Bootstrap -->

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- Font Awesome -->

    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- NProgress -->

    <link href="~/lib/nprogress/nprogress.css" rel="stylesheet" />
    <!-- Animate.css -->

    <link href="~/lib/animate.css/animate.css" rel="stylesheet" />
    <link href="~/lib/notifyjs/dist/styles/metro/notify-metro.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/admin-side/css/custom.css" rel="stylesheet" />
    <link href="~/admin-side/css/style.css" rel="stylesheet" />
</head>

<body class="nav-md">
    <div class="container body">

        <div class="row form-login">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Đăng nhập vào hệ thống</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="">
                        <br>
                        <form action="/Admin/Account/Login" id="frmLogin" method="post" class="form-horizontal">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => m.RedirecUrl)
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 col-sm-3 col-xs-12 required" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @autocomplete = "off",@maxlength="255" })
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-3 col-sm-3 col-xs-12 required" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @autocomplete = "off", @maxlength = "255" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                                </div>
                            </div>
                            @*<div class="form-group">
                                    <label for="RememberMe" class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3">
                                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "flat" })
                                        Nhớ mật khẩu
                                    </label>
                                </div>*@
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3">
                                    <button type="submit" class="btn btn-success">Đăng nhập</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/notifyjs/dist/notify.js"></script>
    <script src="~/lib/notifyjs/dist/styles/metro/notify-metro.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script src="~/app/shared/cms.js"></script>
</body>
</html>